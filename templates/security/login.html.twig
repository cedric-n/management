{% extends 'base.html.twig' %}



{% block stylesheets %}
    {{ encore_entry_link_tags('home') }}
    {{ encore_entry_link_tags('form') }}
{% endblock %}


{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="container">
        <div class="row w-100 d-inline-block">

            <div class="content-form w-100">
                <div class="border-head d-flex justify-content-center align-items-center text-center w-100 position-relative border bg-primary">
                    <h1 class="text-white">Connexion</h1>
                </div>
                <div class="form-border d-flex flex-column justify-content-center align-items-center border  bg-white w-1OO">

                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h2 class="h3 mb-3 font-weight-normal">Please sign in</h2>
                        <label class="mt-5" for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        <label class="mt-5" for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

                        <button class="btn btn-lg btn-primary mt-5" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
            </div>
            <a href="{{ path('home_index') }}">Retour Ã  l'acceuil</a>
        </div>
    </main>
{% endblock %}
