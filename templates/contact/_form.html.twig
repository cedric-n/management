{% use "bootstrap_base_layout.html.twig" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('contact-form') }}
{% endblock %}

{{ form_start(form, { 'attr': {'class': 'w-75 h-100 d-flex justify-content-center flex-column'} }) }}


    <div class="w-100">

        {{ form_widget(form.subject, {'attr': {'class' : 'mb-3 w-100', 'placeholder' : 'Sujet du message'} }) }}
    </div>



    <div class="w-100 d-flex flex-row">
        <div class="w-50">

            {{ form_widget(form.name, {'attr': {'class' : 'mb-3 w-75', 'placeholder' : 'Pr√©nom'} }) }}
        </div>
        <div class="w-50 d-flex justify-content-end">

            {{ form_widget(form.lastname, {'attr': {'class' : 'mb-3 w-75', 'placeholder' : 'Nom'} } ) }}
        </div>

    </div>

    <div class="w-100">

        {{ form_widget(form.email, {'attr': {'class' : 'mb-3 w-100', 'placeholder' : 'example@e-mail.com'} } ) }}
    </div>

    <div class="w-100">
        {{ form_widget(form.message, {'attr' : {'class' : ' form-textarea mb-3 w-100 ', 'placeholder' : 'Message...'} } ) }}
    </div>



    <button>{{ button_label|default('Envoyer') }}</button>



{{ form_end(form) }}