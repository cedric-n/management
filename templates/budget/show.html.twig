{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
    <main>
        {% for budget in budgets %}
            <div>
                <h2>{{ loop.index }} / Name : {{ budget.name }} - Type : {{ budget.type }}  </h2>
            </div>
        {% else %}
            Aucun autre budget
        {% endfor %}

        <a href="{{ path('budget_index') }}">
            Back to the list Incomes
        </a>
    </main>
{% endblock %}